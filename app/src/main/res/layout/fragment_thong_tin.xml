<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TranGiaThai.Fragment.ThongTin">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_icon">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/khung_icon"
                        android:backgroundTint="@color/black"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/poster"
                            android:layout_width="125dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"

                            tools:ignore="MissingConstraints">


                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                app:srcCompat="@drawable/film" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/form_intro"
                            android:layout_width="match_parent"
                            android:layout_height="199dp"
                            tools:ignore="MissingConstraints">

                            <TextView
                                android:id="@+id/tenphim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cám"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="48sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/theloai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tenphim"
                                android:text="Kinh dị , Giật gân"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textStyle="italic" />

                            <LinearLayout
                                android:id="@+id/linearLayout3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/theloai"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="100dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/khung_button3"
                                    android:backgroundTint="#A15CCC"
                                    android:text="thích"

                                    android:textAlignment="center"
                                    android:textSize="10sp" />

                                <Space
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="0" />

                                <Button
                                    android:id="@+id/button4"
                                    android:layout_width="100dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/khung_button3"
                                    android:backgroundTint="#A15CCC"
                                    android:text="trailer"
                                    android:textSize="10sp"
                                    tools:ignore="MissingConstraints" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/linearLayout3"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="5dp"
                                android:background="@drawable/khung_icon"
                                android:orientation="horizontal"


                                android:padding="10dp"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/ngaychieu"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="Ngày chiếu "
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="italic" />


                                <TextView
                                    android:id="@+id/ngonngu"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="Ngôn Ngữ "
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="italic" />

                                <TextView
                                    android:id="@+id/phude"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="Phụ đề"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textStyle="italic" />

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>


                </FrameLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/introduce_film"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_icon">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/startthefilm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Thời Gian Chiếu"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="TextSizeCheck"
                            tools:layout_editor_absoluteX="0dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/startthefilm"
                            tools:layout_editor_absoluteX="16dp">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/calendar" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                            tools:layout_editor_absoluteX="0dp">

                            <Button
                                android:id="@+id/button11"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:backgroundTint="#A15CCC"
                                android:padding="1dp"
                                android:text="Tất cả"
                                android:textAlignment="center"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button10"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:backgroundTint="#A15CCC"
                                android:padding="1dp"
                                android:text="15.00 - 20.00"
                                android:textAlignment="center"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/button9"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:backgroundTint="#A15CCC"
                                android:padding="1dp"
                                android:text="20.00 - 24.00"
                                android:textAlignment="center"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rap_gan_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_icon"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Rạp gần đây"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:id="@+id/LN1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/cgv_icon" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/galaxy" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0"
                            android:background="#FFFFFF"
                            app:srcCompat="@drawable/lotte_icon" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/thoi_gian_chieu_phim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/khung_icon"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/cgv_icon" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="CGV Vincom Đà Nẵng"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Tâng 4, TTTM Vincom Plaza, đường Ngô Quyền , Đà Nẵng "
                                    android:textColor="#FFFFFF"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView4" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_weight="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Khung Giờ Chiếu"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/Rcv_khunggiochieu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/khung_icon"
                        android:backgroundTint="@color/black"
                        android:padding="5dp"
                        tools:spanCount="5" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/khung_icon"
                        android:orientation="vertical"
                        android:padding="10dp"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="125dp"
                        tools:layout_editor_absoluteY="-39dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Cụm Rạp"
                            android:textColor="#FFFFFF"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="MissingConstraints" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Rcv_Rap"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@drawable/khung_icon"

                            android:backgroundTint="@color/black"
                            android:padding="5dp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_tieptuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/khung_icon"
                        android:backgroundTint="#A15CCC"
                        android:text="Tiếp Tục"
                        android:textSize="20dp"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>