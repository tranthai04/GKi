<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung_icon">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/poster"
                android:layout_width="125dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/film" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/form_intro"
                android:layout_width="match_parent"

                android:layout_height="199dp"

                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/tenphim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cám"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/theloai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tenphim"
                    android:layout_marginTop="10dp"
                    android:text="Kinh dị , Giật gân"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/theloai"
                    android:layout_marginTop="5dp"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:background="@drawable/khung_button3"
                        android:backgroundTint="#A15CCC"
                        android:text="thích"

                        android:textAlignment="center"
                        android:textSize="10sp" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="0" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:background="@drawable/khung_button3"
                        android:backgroundTint="#A15CCC"
                        android:text="trailer"
                        android:textSize="10sp"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/linearLayout3"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/khung_icon"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/ngaychieu"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Ngày chiếu "
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/ngonngu"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Ngôn Ngữ "
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/phude"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Phụ đề"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="italic" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>
</LinearLayout>