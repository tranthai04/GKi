<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/khung_icon"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="8"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">

        <ImageView
            android:id="@+id/item_monan"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:baselineAligned="false"
            app:srcCompat="@drawable/food1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tenmon"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:text="Combo 1 Bắp Caramel"


                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:text="60.000đ"

                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_cong"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/soluongmon"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/khung_icon" />

            <ImageView
                android:id="@+id/item_tru"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_gravity="center"

                app:srcCompat="@drawable/subtract" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>